@using Controls.SelectZtree
@using ViewModels.AdminWeb.Nav
@model Sakura.AspNetCore.IPagedList<MenuViewModel>

<h2 class="page-title">
</h2>
<div class="row">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>菜单列表 
            </div>
            <div class="actions">
                <a class="btn btn-default btn-sm" href="javascript:;">
                    <i class="fa fa-refresh"></i> 刷新
                </a>
                <a class="btn btn-default btn-sm" asp-action="Create">
                    <i class="fa fa-plus"></i> 新增
                </a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="form">
                <form class="form-horizontal" id="seachForm" asp-action="Index" data-ajax="true"  data-ajax-update="#tableResult" data-ajax-mode="replace" data-ajax-method="Post">
                    @Html.AntiForgeryToken()
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">快速搜索</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="queryString" id="queryString" placeholder="名称、编码、拼音码">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">父菜单</label>
                                    <div class="col-md-9">
                                        @Html.ZtreeTextBox("ParentMenuName", new{@class= "form-control",@readonly = "readonly", style = "cursor:pointer" })
                                        @Html.Hidden("ParentID")
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn green" >
                                    <i class="fa  fa-search"></i>
                                    搜索
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div id="tableResult">
                @Html.Partial("AjaxMenuTable",Model)
            </div>
        </div>
    </div>
</div>
@section style_page{
    <link href="/lib/ztree.3.5.26/styles/metroStyle/metroStyle.css" rel="stylesheet" />
}
@section scripts_plugins{
    <script src="/lib/ztree.3.5.26/jquery.ztree.core.js"></script>
    <script src="/lib/ztree.3.5.26/jquery.ztree.intput.select.js"></script>
    <script src="/pages/menu/menu.index.js?v=1.0.0.0"></script>
}

